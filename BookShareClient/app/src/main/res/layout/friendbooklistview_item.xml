<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listviewItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/booklistviewitem_title"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/listview_item_title_black" />

    <TextView
        android:id="@+id/booklistviewitem_status"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/booklistviewitem_title"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/listview_item_title_black" />

    <Button
        android:id="@+id/booklistviewitem_borrow"
        style="@style/MainButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:text="借书" />

</RelativeLayout>
