<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/informlistviewitem_title"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="hehe"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/informlistviewitem_content"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/informlistviewitem_title"
        android:text="TextView" />

    <Button
        android:id="@+id/informlistviewitem_confirm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/informlistviewitem_content"
        android:text="确认"
        android:textSize="10sp" />

    <Button
        android:id="@+id/informlistviewitem_cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/informlistviewitem_confirm"
        android:text="取消"
        android:textSize="10sp" />

</RelativeLayout>