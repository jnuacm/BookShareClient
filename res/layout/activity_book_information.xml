<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listview_item_gray"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".BookInformationActivity" >

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="书本的标题很长"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/listview_item_title_black"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_name"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/book_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/book_image"
            android:layout_marginTop="10dp"
            android:text="描述最长。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/listview_item_title_black" />

        <Button
            android:id="@+id/button_good"
            style="@style/MainButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/book_description"
            android:layout_marginTop="20dp"
            android:text="赞" />

        <Button
            android:id="@+id/button_addcomment"
            style="@style/MainButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/book_description"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button_good"
            android:text="添加评论" />

    </RelativeLayout>

</ScrollView>