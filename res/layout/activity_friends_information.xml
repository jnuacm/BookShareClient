<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    tools:context=".FriendsInformationActivity" >
    <LinearLayout
        android:id="@+id/friend_info_bar"
        style="@style/activity_bar_layout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/friend_info_bar_img"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/friend_info_bar_title"
            style="@style/activity_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="好友信息" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_information_horizontal_margin"
        android:layout_marginRight="@dimen/activity_information_horizontal_margin"
        android:layout_marginTop="@dimen/activity_information_vertical_margin"
        android:background="@drawable/person_info_background_layout" >

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="头像"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/IF_img"
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/default_friend_avatar_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_information_horizontal_margin"
        android:layout_marginRight="@dimen/activity_information_horizontal_margin"
        android:layout_marginTop="@dimen/activity_information_vertical_margin"
        android:background="@drawable/person_info_background_layout" >

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/IF_username"
           android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_information_horizontal_margin"
        android:layout_marginRight="@dimen/activity_information_horizontal_margin"
        android:layout_marginTop="@dimen/activity_information_vertical_margin"
        android:background="@drawable/person_info_background_layout" >

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/IF_area"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_information_horizontal_margin"
        android:layout_marginRight="@dimen/activity_information_horizontal_margin"
        android:layout_marginTop="@dimen/activity_information_vertical_margin"
        android:background="@drawable/person_info_background_layout" >

        <TextView
android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="藏书量"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/IF_collection"
android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_information_horizontal_margin"
        android:layout_marginRight="@dimen/activity_information_horizontal_margin"
        android:layout_marginTop="@dimen/activity_information_vertical_margin"
        android:background="@drawable/person_info_background_layout" >

        <TextView
android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAppearance="@style/InformationTextStyle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/IF_email"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textAppearance="@style/InformationTextStyle" />

    </LinearLayout>

    <Button
        android:id="@+id/friend_checkbook_button"
        style="@style/MainButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="查看书表"
        android:textSize="20sp" />

    <Button
        android:id="@+id/group_checkfriend_button"
        style="@style/MainButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="查看成员"
        android:textSize="20sp"
        android:visibility="invisible" />

</LinearLayout>