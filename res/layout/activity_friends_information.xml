<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".FriendsInformationActivity" >

    <ImageView
        android:id="@+id/IF_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/IF_username_top"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@id/IF_img"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_username"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@id/IF_img"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/IF_username_top"
        android:gravity="center_horizontal"
        android:text="未知"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_area_top"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@id/IF_username_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="地区"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_area"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@id/IF_username"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/IF_area_top"
        android:gravity="center_horizontal"
        android:text="未知"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_collection_top"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@id/IF_area_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="藏书量"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_collection"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@id/IF_area"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/IF_collection_top"
        android:gravity="center_horizontal"
        android:text="未知"
        android:textColor="#111111"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/IF_email_top"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@id/IF_collection_top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/IF_email"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@id/IF_collection"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/IF_email_top"
        android:gravity="center_horizontal"
        android:text="未知"
        android:textColor="#111111"
        android:textSize="20sp" />

    <Button
        android:id="@+id/friend_checkbook_button"
        style="@style/MainButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/IF_email_top"
        android:layout_marginTop="36dp"
        android:text="查看书表"
        android:textSize="20sp" />

</RelativeLayout>