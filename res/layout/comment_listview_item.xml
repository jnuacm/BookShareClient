<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listviewItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/comment_item_person_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="person:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textfont_gray" />

    <TextView
        android:id="@+id/comment_item_content_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/comment_item_person_textview"
        android:text="content......................."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textfont_black" />

    <TextView
        android:id="@+id/comment_item_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/comment_item_content_textview"
        android:text="xxxx-xx-xx"
        android:textColor="@color/textfont_gray" />

</RelativeLayout>
